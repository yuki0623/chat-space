.main-chat__messages__date-massage__upper-info{data: {message: {id: message.id}}}
  .upper-message
    .talker
      = message.user.name
    .date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__messages__deta-message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-massage__image' if message.image.present?


