  .main-chat__form
    = form_for [@group, @message]do |f|
      .main-chat__form__new_messeage
        .main-chat__form__new_messeage__input-box
          = f.text_field :content, class: 'main-chat__form__new_messeage__input-box--message', placeholder: 'type a message' 
          .main-chat__form__new_messeage__input-box--image
            = f.label :image, class: 'image' do
              = icon('fas', 'image' ,class: 'icon')
              = f.file_field :image, class: 'images'
        = f.submit 'send', class: 'main-chat__form__new_messeage__edit-btn'

